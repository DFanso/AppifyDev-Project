# Tech News Aggregator Environment Configuration

# OpenAI API Configuration (Required for AI chat features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./tech_news.db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# News Aggregation Settings
RSS_FETCH_INTERVAL=3600 # seconds (1 hour)
MAX_ARTICLES_PER_SOURCE=50

# AI Chat Settings
MAX_CHAT_HISTORY=50
CHAT_CONTEXT_LIMIT=2000

# Redis Cache Configuration (Optional - falls back to no caching if not available)
# For local development:
REDIS_URL=redis://localhost:6379

# For production with authentication:
# REDIS_URL=redis://:password@hostname:port/database

# For Redis Cloud/managed services:
# REDIS_URL=redis://username:password@hostname:port

# Logging Configuration
LOG_LEVEL=INFO

# RSS Aggregation Settings
RSS_FETCH_INTERVAL_MINUTES=30
RSS_REQUEST_TIMEOUT_SECONDS=30
RSS_MAX_RETRIES=3

# Cache TTL Settings (in seconds)
CACHE_ARTICLES_TTL=300          # 5 minutes
CACHE_TRENDING_TTL=600          # 10 minutes  
CACHE_SEARCH_TTL=600            # 10 minutes
CACHE_BOOKMARKS_TTL=300         # 5 minutes
CACHE_SUGGESTIONS_TTL=1800      # 30 minutes
